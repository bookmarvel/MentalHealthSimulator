<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" styleClass="borderpane" fx:controller = "MyController"
			fx:id = "root">
	<padding>
		<Insets top="10" right="10" bottom="10" left="10"/>
	</padding>
	<top>
		<HBox fx:id = "displaysHbox">
			<VBox fx:id = "left">
				<HBox>
					<TextField fx:id = "currTimeText"
							   text="Date and time:"
							   prefWidth="300"
							   prefHeight="40"
							   editable="false"
					/>
					<TextField fx:id="currDayDisplay"
							   text="Sunday"
							   prefWidth="100"
							   prefHeight="40"
							   editable="false"
					/>
					<TextField fx:id="currTimeDisplay"
							   text="6:00 am"
							   prefWidth="100"
							   prefHeight="40"
							   editable="false"
					/>
				</HBox>
				<ListView fx:id = "actionLog"
						   prefWidth="500"
						   prefHeight="130"
				/>
			</VBox>
			<VBox fx:id = "right">
				<TextField fx:id = "mentalHealthText"
						   text="Mental health:"
						   prefWidth="300"
						   prefHeight="30"
						   editable="false"
				/>
				<ProgressBar fx:id="mentalHealthBar"
							 progress = "0.5F"
							 prefWidth="300"
							 prefHeight="40"
				/>
				<TextField fx:id = "foodText"
						   text="Food:"
						   prefWidth="300"
						   prefHeight="30"
						   editable="false"
				/>
				<ProgressBar fx:id="foodBar"
							 progress = "0.5F"
							 prefWidth="300"
							 prefHeight="40"
				/>
				<TextField fx:id = "moneyDisplay"
						   text="\$100"
						   prefWidth="300"
						   prefHeight="30"
						   editable="false"
				/>
			</VBox>
		</HBox>
	</top>

	<center>
		<VBox spacing="10">
			<padding>
				<Insets top="30" right="10" bottom="10" left="10"/>
			</padding>
			<HBox fx:id="buttonLayer1" alignment="CENTER" spacing="10">
				<Button fx:id = "bDoWork" text = "work" styleClass="productive"/>
				<Button fx:id = "bGoClass" text = "class" styleClass="productive"/>
				<Button fx:id = "bDoHW" text = "hw" styleClass="productive"/>
				<Button fx:id = "bDoChores" text = "chores" styleClass="productive"/>
			</HBox>
			<HBox fx:id="buttonLayer2" alignment="CENTER" spacing="10">
				<Button fx:id = "bWatchTV" text = "tv" styleClass="relax"/>
				<Button fx:id = "bTakeNap" text = "nap" styleClass="relax"/>
				<Button fx:id = "bGoWalk" text = "walk" styleClass="relax"/>
			</HBox>
			<HBox fx:id="buttonLayer3" alignment="CENTER" spacing="10">
				<Button fx:id = "bCookMeal" text = "cook" styleClass="food"/>
				<Button fx:id = "bOrderFood" text = "order out" styleClass="food"/>
				<Button fx:id = "bMakeSnack" text = "snack" styleClass="food"/>
			</HBox>
			<HBox fx:id="buttonLayer4">
				<Button fx:id = "bGoSleep" text = "sleep" styleClass="sleep"/>
			</HBox>
		</VBox>
	</center>
	
</BorderPane>

